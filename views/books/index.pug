extends ../layout


block content
  div.container
    form(method="GET" action="/books/search")
      div.form-group.search-form
        input#search.form-control.text-center(type='text', placeholder='Search...' name='search')
        button(type="submit")
          svg(fill="#fff" height="24" viewBox="0 0 23 23" width="24" xmlns="http://www.w3.org/2000/svg")
            path(d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z")
            path(d="M0 0h24v24H0z" fill="none")
    unless inSearch
  
  div.container.create
    a#create.button(href=`/books/new`) Create
  
  
  div.container
    table
      thead
        tr
          th Title
          th Author
          th Genre
          th Year
      tbody
        each book in books
          tr
            td
              a(href=`/books/${book.id}/update`)= book.title
            td= book.author
            td= book.genre
            td= book.year
  
    div.btn-group
      if pages
        - var i = 1;
        while i < (pages + 1)
            a(class='button', href=`/books/pages/${i}`)= i++
      


